{
  "phases": {
    "setup": {
      "nixPkgs": ["python312", "openssl"],
      "nixLibs": ["openssl"]
    },
    "install": {
      "cmds": [
        "pip install --upgrade pip setuptools wheel",
        "pip install -r requirements.txt"
      ]
    },
    "build": {
      "cmds": ["python manage.py collectstatic --noinput"]
    }
  },
  "start": {
    "cmd": "python manage.py migrate && gunicorn crm_backend.wsgi:application --bind 0.0.0.0:$PORT"
  }
}